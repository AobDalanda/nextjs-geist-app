{% extends 'base.html.twig' %}

{% block title %}FAQ - {{ parent() }}{% endblock %}

{% block body %}
<div class="bg-white">
    <div class="max-w-7xl mx-auto py-16 px-4 sm:px-6 lg:py-20 lg:px-8">
        <div class="lg:grid lg:grid-cols-3 lg:gap-8">
            <div>
                <h2 class="text-3xl font-extrabold text-gray-900">
                    Frequently Asked Questions
                </h2>
                <p class="mt-4 text-lg text-gray-500">
                    Can't find the answer you're looking for? Feel free to 
                    <a href="{{ path('app_contact') }}" class="font-medium text-blue-600 hover:text-blue-500">
                        contact us
                    </a>
                    for assistance.
                </p>

                <div class="mt-8 flex items-center gap-4">
                    <a href="{{ path('app_appointment_new') }}" 
                       class="inline-flex items-center px-4 py-2 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700">
                        Book Appointment
                    </a>
                    <a href="{{ path('app_contact') }}" 
                       class="inline-flex items-center px-4 py-2 border border-gray-300 text-base font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                        Contact Us
                    </a>
                </div>
            </div>
            <div class="mt-12 lg:mt-0 lg:col-span-2">
                <dl class="space-y-12">
                    {% for faq in faqs %}
                        <div class="hover-card p-6 bg-white rounded-lg shadow-sm border border-gray-100">
                            <dt class="text-lg leading-6 font-medium text-gray-900">
                                {{ faq.question }}
                            </dt>
                            <dd class="mt-2 text-base text-gray-500">
                                {{ faq.answer }}
                            </dd>
                        </div>
                    {% endfor %}
                </dl>
            </div>
        </div>
    </div>

    {# Additional Resources Section #}
    <div class="bg-gray-50">
        <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:py-16 lg:px-8">
            <h2 class="text-2xl font-bold text-gray-900 text-center mb-8">
                Additional Resources
            </h2>
            <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-3">
                <div class="hover-card bg-white overflow-hidden shadow rounded-lg">
                    <div class="px-4 py-5 sm:p-6">
                        <div class="text-center">
                            <div class="flex items-center justify-center h-12 w-12 rounded-md bg-blue-500 text-white mx-auto">
                                <i class="fas fa-book-medical text-xl"></i>
                            </div>
                            <h3 class="mt-4 text-lg font-medium text-gray-900">Patient Guide</h3>
                            <p class="mt-2 text-base text-gray-500">
                                Learn how to make the most of our services and prepare for your visit.
                            </p>
                        </div>
                    </div>
                    <div class="bg-gray-50 px-4 py-4 sm:px-6">
                        <div class="text-sm text-center">
                            <a href="#" class="font-medium text-blue-600 hover:text-blue-500">
                                Download Guide <span aria-hidden="true">&rarr;</span>
                            </a>
                        </div>
                    </div>
                </div>

                <div class="hover-card bg-white overflow-hidden shadow rounded-lg">
                    <div class="px-4 py-5 sm:p-6">
                        <div class="text-center">
                            <div class="flex items-center justify-center h-12 w-12 rounded-md bg-blue-500 text-white mx-auto">
                                <i class="fas fa-file-medical text-xl"></i>
                            </div>
                            <h3 class="mt-4 text-lg font-medium text-gray-900">Forms & Documents</h3>
                            <p class="mt-2 text-base text-gray-500">
                                Access and download important forms and documents for your visit.
                            </p>
                        </div>
                    </div>
                    <div class="bg-gray-50 px-4 py-4 sm:px-6">
                        <div class="text-sm text-center">
                            <a href="#" class="font-medium text-blue-600 hover:text-blue-500">
                                View Forms <span aria-hidden="true">&rarr;</span>
                            </a>
                        </div>
                    </div>
                </div>

                <div class="hover-card bg-white overflow-hidden shadow rounded-lg">
                    <div class="px-4 py-5 sm:p-6">
                        <div class="text-center">
                            <div class="flex items-center justify-center h-12 w-12 rounded-md bg-blue-500 text-white mx-auto">
                                <i class="fas fa-video text-xl"></i>
                            </div>
                            <h3 class="mt-4 text-lg font-medium text-gray-900">Video Tutorials</h3>
                            <p class="mt-2 text-base text-gray-500">
                                Watch helpful videos about using our appointment system.
                            </p>
                        </div>
                    </div>
                    <div class="bg-gray-50 px-4 py-4 sm:px-6">
                        <div class="text-sm text-center">
                            <a href="#" class="font-medium text-blue-600 hover:text-blue-500">
                                Watch Videos <span aria-hidden="true">&rarr;</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# Contact CTA Section #}
    <div class="bg-blue-700">
        <div class="max-w-2xl mx-auto text-center py-16 px-4 sm:py-20 sm:px-6 lg:px-8">
            <h2 class="text-3xl font-extrabold text-white sm:text-4xl">
                <span class="block">Still have questions?</span>
                <span class="block">We're here to help.</span>
            </h2>
            <p class="mt-4 text-lg leading-6 text-blue-200">
                Our support team is available to assist you with any questions or concerns.
            </p>
            <a href="{{ path('app_contact') }}" 
               class="mt-8 w-full inline-flex items-center justify-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-blue-700 bg-white hover:bg-blue-50 sm:w-auto">
                Contact Support
            </a>
        </div>
    </div>
</div>
{% endblock %}
