{% extends 'base.html.twig' %}

{% block title %}Welcome{% endblock %}

{% block body %}
    {# Hero Section #}
    <section class="relative bg-white overflow-hidden">
        <div class="max-w-7xl mx-auto">
            <div class="relative z-10 pb-8 bg-white sm:pb-16 md:pb-20 lg:max-w-2xl lg:w-full lg:pb-28 xl:pb-32">
                <main class="mt-10 mx-auto max-w-7xl px-4 sm:mt-12 sm:px-6 lg:mt-16 lg:px-8 xl:mt-20">
                    <div class="sm:text-center lg:text-left">
                        <h1 class="text-4xl tracking-tight font-extrabold text-gray-900 sm:text-5xl md:text-6xl">
                            <span class="block">Your Health is Our</span>
                            <span class="block text-blue-600">Top Priority</span>
                        </h1>
                        <p class="mt-3 text-base text-gray-500 sm:mt-5 sm:text-lg sm:max-w-xl sm:mx-auto md:mt-5 md:text-xl lg:mx-0">
                            Book your medical appointments online with our expert doctors. 
                            Quick, easy, and secure scheduling for all your healthcare needs.
                        </p>
                        <div class="mt-5 sm:mt-8 sm:flex sm:justify-center lg:justify-start">
                            <div class="rounded-md shadow">
                                <a href="{{ path('app_appointment_new') }}" 
                                   class="w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 md:py-4 md:text-lg md:px-10">
                                    Book Appointment
                                </a>
                            </div>
                            <div class="mt-3 sm:mt-0 sm:ml-3">
                                <a href="{{ path('app_services') }}" 
                                   class="w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-blue-700 bg-blue-100 hover:bg-blue-200 md:py-4 md:text-lg md:px-10">
                                    Our Services
                                </a>
                            </div>
                        </div>
                    </div>
                </main>
            </div>
        </div>
    </section>

    {# Featured Services #}
    <section class="bg-gray-50 py-12 sm:py-16 lg:py-20">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center">
                <h2 class="text-3xl font-extrabold tracking-tight text-gray-900 sm:text-4xl">
                    Our Medical Services
                </h2>
                <p class="mt-4 max-w-2xl mx-auto text-xl text-gray-500">
                    Comprehensive healthcare services tailored to your needs
                </p>
            </div>

            <div class="mt-12 grid gap-8 grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
                {% for service in featured_services %}
                    <div class="bg-white overflow-hidden shadow rounded-lg">
                        <div class="p-6">
                            <div class="flex items-center">
                                <div class="flex-shrink-0">
                                    <i class="{{ service.icon }} text-2xl text-blue-600"></i>
                                </div>
                                <div class="ml-4">
                                    <h3 class="text-lg font-medium text-gray-900">
                                        {{ service.name }}
                                    </h3>
                                </div>
                            </div>
                            <div class="mt-4">
                                <p class="text-base text-gray-500">
                                    {{ service.description }}
                                </p>
                            </div>
                            <div class="mt-6">
                                <a href="{{ path('app_service_show', {id: service.id}) }}" 
                                   class="inline-flex items-center text-blue-600 hover:text-blue-700">
                                    Learn more
                                    <i class="fas fa-arrow-right ml-2"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

            <div class="mt-12 text-center">
                <a href="{{ path('app_services') }}" 
                   class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-blue-700 bg-blue-100 hover:bg-blue-200">
                    View All Services
                    <i class="fas fa-arrow-right ml-2"></i>
                </a>
            </div>
        </div>
    </section>

    {# Featured Doctors #}
    <section class="bg-white py-12 sm:py-16 lg:py-20">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center">
                <h2 class="text-3xl font-extrabold tracking-tight text-gray-900 sm:text-4xl">
                    Meet Our Doctors
                </h2>
                <p class="mt-4 max-w-2xl mx-auto text-xl text-gray-500">
                    Expert healthcare professionals dedicated to your wellbeing
                </p>
            </div>

            <div class="mt-12 grid gap-8 grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
                {% for doctor in featured_doctors %}
                    <div class="bg-white overflow-hidden shadow rounded-lg">
                        <div class="p-6">
                            <div class="flex items-center">
                                <div class="flex-shrink-0 h-20 w-20">
                                    <img class="h-20 w-20 rounded-full object-cover" 
                                         src="{{ doctor.avatarUrl }}" 
                                         alt="Dr. {{ doctor.user.fullName }}">
                                </div>
                                <div class="ml-4">
                                    <h3 class="text-lg font-medium text-gray-900">
                                        Dr. {{ doctor.user.fullName }}
                                    </h3>
                                    <p class="text-sm text-gray-500">
                                        {{ doctor.specialization }}
                                    </p>
                                </div>
                            </div>
                            <div class="mt-4">
                                <p class="text-base text-gray-500">
                                    {{ doctor.description }}
                                </p>
                            </div>
                            <div class="mt-6">
                                <a href="{{ path('app_doctor_show', {id: doctor.id}) }}" 
                                   class="inline-flex items-center text-blue-600 hover:text-blue-700">
                                    View Profile
                                    <i class="fas fa-arrow-right ml-2"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

            <div class="mt-12 text-center">
                <a href="{{ path('app_doctors') }}" 
                   class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-blue-700 bg-blue-100 hover:bg-blue-200">
                    View All Doctors
                    <i class="fas fa-arrow-right ml-2"></i>
                </a>
            </div>
        </div>
    </section>

    {# Why Choose Us #}
    <section class="bg-gray-50 py-12 sm:py-16 lg:py-20">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center">
                <h2 class="text-3xl font-extrabold tracking-tight text-gray-900 sm:text-4xl">
                    Why Choose Us
                </h2>
                <p class="mt-4 max-w-2xl mx-auto text-xl text-gray-500">
                    Experience healthcare excellence with our comprehensive services
                </p>
            </div>

            <div class="mt-12 grid gap-8 grid-cols-1 md:grid-cols-2 lg:grid-cols-4">
                <div class="text-center">
                    <div class="flex items-center justify-center h-12 w-12 rounded-md bg-blue-600 text-white mx-auto">
                        <i class="fas fa-user-md text-xl"></i>
                    </div>
                    <h3 class="mt-6 text-lg font-medium text-gray-900">Expert Doctors</h3>
                    <p class="mt-2 text-base text-gray-500">
                        Highly qualified and experienced medical professionals
                    </p>
                </div>

                <div class="text-center">
                    <div class="flex items-center justify-center h-12 w-12 rounded-md bg-blue-600 text-white mx-auto">
                        <i class="fas fa-clock text-xl"></i>
                    </div>
                    <h3 class="mt-6 text-lg font-medium text-gray-900">24/7 Service</h3>
                    <p class="mt-2 text-base text-gray-500">
                        Round-the-clock medical care and support
                    </p>
                </div>

                <div class="text-center">
                    <div class="flex items-center justify-center h-12 w-12 rounded-md bg-blue-600 text-white mx-auto">
                        <i class="fas fa-hospital text-xl"></i>
                    </div>
                    <h3 class="mt-6 text-lg font-medium text-gray-900">Modern Facilities</h3>
                    <p class="mt-2 text-base text-gray-500">
                        State-of-the-art medical equipment and facilities
                    </p>
                </div>

                <div class="text-center">
                    <div class="flex items-center justify-center h-12 w-12 rounded-md bg-blue-600 text-white mx-auto">
                        <i class="fas fa-heart text-xl"></i>
                    </div>
                    <h3 class="mt-6 text-lg font-medium text-gray-900">Patient Care</h3>
                    <p class="mt-2 text-base text-gray-500">
                        Dedicated to providing compassionate care
                    </p>
                </div>
            </div>
        </div>
    </section>

    {# Call to Action #}
    <section class="bg-blue-600">
        <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:py-16 lg:px-8 lg:flex lg:items-center lg:justify-between">
            <h2 class="text-3xl font-extrabold tracking-tight text-white sm:text-4xl">
                <span class="block">Ready to get started?</span>
                <span class="block text-blue-200">Book your appointment today.</span>
            </h2>
            <div class="mt-8 flex lg:mt-0 lg:flex-shrink-0">
                <div class="inline-flex rounded-md shadow">
                    <a href="{{ path('app_appointment_new') }}" 
                       class="inline-flex items-center justify-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-blue-600 bg-white hover:bg-blue-50">
                        Book Now
                        <i class="fas fa-arrow-right ml-2"></i>
                    </a>
                </div>
                <div class="ml-3 inline-flex rounded-md shadow">
                    <a href="{{ path('app_contact') }}" 
                       class="inline-flex items-center justify-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-700 hover:bg-blue-800">
                        Contact Us
                    </a>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
