{% extends 'base.html.twig' %}

{% block title %}Contact Us - {{ parent() }}{% endblock %}

{% block body %}
<div class="bg-white">
    {# Hero Section #}
    <div class="relative bg-blue-700">
        <div class="absolute inset-0">
            <div class="absolute inset-y-0 left-0 w-1/2 bg-gray-50"></div>
        </div>
        <div class="relative max-w-7xl mx-auto lg:grid lg:grid-cols-5">
            <div class="bg-gray-50 py-16 px-4 sm:px-6 lg:col-span-2 lg:px-8 lg:py-24 xl:pr-12">
                <div class="max-w-lg mx-auto">
                    <h2 class="text-2xl font-extrabold tracking-tight text-gray-900 sm:text-3xl">
                        Get in Touch
                    </h2>
                    <p class="mt-3 text-lg leading-6 text-gray-500">
                        Have questions about our services or need assistance? We're here to help.
                    </p>
                    <dl class="mt-8 text-base text-gray-500">
                        <div class="mt-6">
                            <dt class="sr-only">Physical address</dt>
                            <dd class="flex">
                                <i class="fas fa-map-marker-alt flex-shrink-0 h-6 w-6 text-gray-400"></i>
                                <span class="ml-3">
                                    123 Medical Center Drive<br>
                                    Suite 100<br>
                                    Healthcare City, HC 12345
                                </span>
                            </dd>
                        </div>
                        <div class="mt-3">
                            <dt class="sr-only">Phone number</dt>
                            <dd class="flex">
                                <i class="fas fa-phone flex-shrink-0 h-6 w-6 text-gray-400"></i>
                                <span class="ml-3">
                                    +1 (555) 123-4567
                                </span>
                            </dd>
                        </div>
                        <div class="mt-3">
                            <dt class="sr-only">Email</dt>
                            <dd class="flex">
                                <i class="fas fa-envelope flex-shrink-0 h-6 w-6 text-gray-400"></i>
                                <span class="ml-3">
                                    contact@clinic.com
                                </span>
                            </dd>
                        </div>
                    </dl>
                    <p class="mt-6 text-base text-gray-500">
                        <strong>Opening Hours:</strong>
                    </p>
                    <ul class="mt-2 text-base text-gray-500">
                        <li>Monday - Friday: 8:00 AM - 8:00 PM</li>
                        <li>Saturday: 9:00 AM - 5:00 PM</li>
                        <li>Sunday: Closed</li>
                    </ul>
                </div>
            </div>
            <div class="bg-blue-700 py-16 px-4 sm:px-6 lg:col-span-3 lg:py-24 lg:px-8 xl:pl-12">
                <div class="max-w-lg mx-auto lg:max-w-none">
                    <form action="{{ path('app_contact_submit') }}" method="POST" class="grid grid-cols-1 gap-y-6">
                        <div>
                            <label for="name" class="sr-only">Full name</label>
                            <input type="text" name="name" id="name" required
                                   class="block w-full shadow-sm py-3 px-4 placeholder-gray-300 focus:ring-blue-500 focus:border-blue-500 border-gray-300 rounded-md text-gray-900"
                                   placeholder="Full name">
                        </div>
                        <div>
                            <label for="email" class="sr-only">Email</label>
                            <input type="email" name="email" id="email" required
                                   class="block w-full shadow-sm py-3 px-4 placeholder-gray-300 focus:ring-blue-500 focus:border-blue-500 border-gray-300 rounded-md text-gray-900"
                                   placeholder="Email">
                        </div>
                        <div>
                            <label for="phone" class="sr-only">Phone</label>
                            <input type="tel" name="phone" id="phone"
                                   class="block w-full shadow-sm py-3 px-4 placeholder-gray-300 focus:ring-blue-500 focus:border-blue-500 border-gray-300 rounded-md text-gray-900"
                                   placeholder="Phone number">
                        </div>
                        <div>
                            <label for="subject" class="sr-only">Subject</label>
                            <input type="text" name="subject" id="subject" required
                                   class="block w-full shadow-sm py-3 px-4 placeholder-gray-300 focus:ring-blue-500 focus:border-blue-500 border-gray-300 rounded-md text-gray-900"
                                   placeholder="Subject">
                        </div>
                        <div>
                            <label for="message" class="sr-only">Message</label>
                            <textarea id="message" name="message" rows="4" required
                                      class="block w-full shadow-sm py-3 px-4 placeholder-gray-300 focus:ring-blue-500 focus:border-blue-500 border-gray-300 rounded-md text-gray-900"
                                      placeholder="Message"></textarea>
                        </div>
                        <div>
                            <button type="submit"
                                    class="inline-flex justify-center py-3 px-6 border border-transparent shadow-sm text-base font-medium rounded-md text-blue-700 bg-white hover:bg-blue-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                                Send Message
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    {# Map Section #}
    <div class="bg-gray-50">
        <div class="max-w-7xl mx-auto py-16 px-4 sm:px-6 lg:px-8">
            <div class="bg-white shadow-lg rounded-lg overflow-hidden">
                <div class="px-4 py-5 sm:p-6">
                    <h3 class="text-lg leading-6 font-medium text-gray-900">
                        Our Location
                    </h3>
                    <div class="mt-4 aspect-w-16 aspect-h-9">
                        <iframe 
                            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3024.2219901290355!2d-74.00369368400567!3d40.71312937933185!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c25a23e28c1191%3A0x49f75d3281df052a!2s150%20Park%20Row%2C%20New%20York%2C%20NY%2010007!5e0!3m2!1sen!2sus!4v1644939200000!5m2!1sen!2sus"
                            width="100%"
                            height="450"
                            style="border:0;"
                            allowfullscreen=""
                            loading="lazy">
                        </iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# Emergency Contact Section #}
    <div class="bg-red-50">
        <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:py-16 lg:px-8 lg:flex lg:items-center lg:justify-between">
            <h2 class="text-3xl font-extrabold tracking-tight text-gray-900 sm:text-4xl">
                <span class="block">Emergency?</span>
                <span class="block text-red-600">Call our 24/7 emergency hotline.</span>
            </h2>
            <div class="mt-8 flex lg:mt-0 lg:flex-shrink-0">
                <div class="inline-flex rounded-md shadow">
                    <a href="tel:+1-555-999-8888" 
                       class="inline-flex items-center justify-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-white bg-red-600 hover:bg-red-700">
                        <i class="fas fa-phone-alt mr-2"></i>
                        +1 (555) 999-8888
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

{% block javascripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    const form = document.querySelector('form');
    form.addEventListener('submit', function(e) {
        e.preventDefault();
        // Here you would typically handle the form submission with AJAX
        // For now, we'll just show an alert
        alert('Thank you for your message. We will get back to you soon!');
        form.reset();
    });
});
</script>
{% endblock %}
{% endblock %}
