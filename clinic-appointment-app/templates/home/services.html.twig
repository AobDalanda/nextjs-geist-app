{% extends 'base.html.twig' %}

{% block title %}Our Services - {{ parent() }}{% endblock %}

{% block body %}
{# Hero Section #}
<div class="bg-blue-700">
    <div class="max-w-7xl mx-auto py-16 px-4 sm:py-24 sm:px-6 lg:px-8">
        <div class="text-center">
            <h1 class="text-4xl font-extrabold text-white sm:text-5xl sm:tracking-tight lg:text-6xl">Our Services</h1>
            <p class="max-w-3xl mt-6 mx-auto text-xl text-blue-200">
                Comprehensive healthcare services tailored to your needs. Book an appointment with our experienced professionals today.
            </p>
        </div>
    </div>
</div>

{# Services Grid #}
<div class="bg-gray-50 py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-3">
            {% for service in services %}
                <div class="hover-card bg-white overflow-hidden shadow-lg rounded-lg">
                    <div class="p-6">
                        <div class="flex items-center">
                            <div class="flex-shrink-0">
                                <div class="flex items-center justify-center h-12 w-12 rounded-md bg-blue-500 text-white">
                                    <i class="fas fa-{{ service.icon|default('stethoscope') }} text-xl"></i>
                                </div>
                            </div>
                            <div class="ml-4">
                                <h3 class="text-lg font-medium text-gray-900">{{ service.name }}</h3>
                                <p class="mt-1 text-sm text-gray-500">
                                    {{ service.duration }} minutes | ${{ service.price }}
                                </p>
                            </div>
                        </div>
                        <div class="mt-4">
                            <p class="text-base text-gray-500">{{ service.description }}</p>
                        </div>
                        <div class="mt-6">
                            <h4 class="text-sm font-medium text-gray-900">What's included:</h4>
                            <ul class="mt-2 list-disc list-inside text-sm text-gray-500">
                                {% for benefit in service.benefits|default(['Professional consultation', 'Expert diagnosis', 'Treatment plan', 'Follow-up recommendations']) %}
                                    <li>{{ benefit }}</li>
                                {% endfor %}
                            </ul>
                        </div>
                        {% if service.prerequisites %}
                            <div class="mt-4">
                                <h4 class="text-sm font-medium text-gray-900">Prerequisites:</h4>
                                <p class="mt-1 text-sm text-gray-500">{{ service.prerequisites }}</p>
                            </div>
                        {% endif %}
                    </div>
                    <div class="bg-gray-50 px-6 py-4">
                        {% if app.user %}
                            <a href="{{ path('app_appointment_new', {'service': service.id}) }}" 
                               class="block w-full text-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700">
                                Book Appointment
                            </a>
                        {% else %}
                            <div class="space-y-2">
                                <a href="{{ path('app_register') }}" 
                                   class="block w-full text-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700">
                                    Register to Book
                                </a>
                                <p class="text-xs text-center text-gray-500">
                                    Already have an account? 
                                    <a href="{{ path('app_login') }}" class="text-blue-600 hover:text-blue-500">Login</a>
                                </p>
                            </div>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>

{# Insurance Section #}
<div class="bg-white">
    <div class="max-w-7xl mx-auto py-16 px-4 sm:py-24 sm:px-6 lg:px-8">
        <div class="lg:grid lg:grid-cols-2 lg:gap-8 lg:items-center">
            <div>
                <h2 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">
                    Insurance Coverage
                </h2>
                <p class="mt-3 max-w-3xl text-lg text-gray-500">
                    We accept most major insurance plans. Contact your insurance provider to verify coverage for specific services.
                </p>
                <div class="mt-8 sm:flex">
                    <div class="rounded-md shadow">
                        <a href="{{ path('app_contact') }}" 
                           class="flex items-center justify-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700">
                            Contact Us
                        </a>
                    </div>
                    <div class="mt-3 sm:mt-0 sm:ml-3">
                        <a href="{{ path('app_faq') }}" 
                           class="flex items-center justify-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-blue-700 bg-blue-100 hover:bg-blue-200">
                            Learn More
                        </a>
                    </div>
                </div>
            </div>
            <div class="mt-8 grid grid-cols-2 gap-0.5 md:grid-cols-3 lg:mt-0 lg:grid-cols-2">
                <div class="col-span-1 flex justify-center py-8 px-8 bg-gray-50">
                    <img class="max-h-12" src="https://tailwindui.com/img/logos/transistor-logo-gray-400.svg" alt="Insurance Provider">
                </div>
                <div class="col-span-1 flex justify-center py-8 px-8 bg-gray-50">
                    <img class="max-h-12" src="https://tailwindui.com/img/logos/mirage-logo-gray-400.svg" alt="Insurance Provider">
                </div>
                <div class="col-span-1 flex justify-center py-8 px-8 bg-gray-50">
                    <img class="max-h-12" src="https://tailwindui.com/img/logos/tuple-logo-gray-400.svg" alt="Insurance Provider">
                </div>
                <div class="col-span-1 flex justify-center py-8 px-8 bg-gray-50">
                    <img class="max-h-12" src="https://tailwindui.com/img/logos/laravel-logo-gray-400.svg" alt="Insurance Provider">
                </div>
            </div>
        </div>
    </div>
</div>

{# CTA Section #}
<div class="bg-blue-700">
    <div class="max-w-2xl mx-auto text-center py-16 px-4 sm:py-20 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-extrabold text-white sm:text-4xl">
            <span class="block">Ready to get started?</span>
            <span class="block">Book your appointment today.</span>
        </h2>
        <p class="mt-4 text-lg leading-6 text-blue-200">
            Experience professional healthcare services tailored to your needs.
        </p>
        {% if app.user %}
            <a href="{{ path('app_appointment_new') }}" 
               class="mt-8 w-full inline-flex items-center justify-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-blue-700 bg-white hover:bg-blue-50 sm:w-auto">
                Book Now
            </a>
        {% else %}
            <a href="{{ path('app_register') }}" 
               class="mt-8 w-full inline-flex items-center justify-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-blue-700 bg-white hover:bg-blue-50 sm:w-auto">
                Create Account
            </a>
        {% endif %}
    </div>
</div>
{% endblock %}
