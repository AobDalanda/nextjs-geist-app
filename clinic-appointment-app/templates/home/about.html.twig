{% extends 'base.html.twig' %}

{% block title %}About Us - {{ parent() }}{% endblock %}

{% block body %}
{# Hero Section #}
<div class="relative bg-blue-700">
    <div class="absolute inset-0">
        <div class="absolute inset-y-0 left-0 w-1/2 bg-gray-50"></div>
    </div>
    <div class="relative max-w-7xl mx-auto lg:grid lg:grid-cols-2">
        <div class="bg-gray-50 py-16 px-4 sm:px-6 lg:px-8 lg:py-24 xl:pr-12">
            <div class="max-w-lg mx-auto lg:max-w-none">
                <h2 class="text-3xl font-extrabold tracking-tight text-gray-900 sm:text-4xl">
                    About {{ site_name }}
                </h2>
                <p class="mt-4 text-xl text-gray-500">
                    We are committed to providing exceptional healthcare services with a patient-centered approach. Our mission is to make quality healthcare accessible and convenient for everyone.
                </p>
                <div class="mt-8">
                    <dl class="space-y-10">
                        <div class="relative">
                            <dt>
                                <div class="absolute flex items-center justify-center h-12 w-12 rounded-md bg-blue-500 text-white">
                                    <i class="fas fa-heart text-xl"></i>
                                </div>
                                <p class="ml-16 text-lg leading-6 font-medium text-gray-900">Our Mission</p>
                            </dt>
                            <dd class="mt-2 ml-16 text-base text-gray-500">
                                To deliver compassionate, high-quality healthcare services while making medical appointments easily accessible through innovative technology.
                            </dd>
                        </div>

                        <div class="relative">
                            <dt>
                                <div class="absolute flex items-center justify-center h-12 w-12 rounded-md bg-blue-500 text-white">
                                    <i class="fas fa-eye text-xl"></i>
                                </div>
                                <p class="ml-16 text-lg leading-6 font-medium text-gray-900">Our Vision</p>
                            </dt>
                            <dd class="mt-2 ml-16 text-base text-gray-500">
                                To be the leading healthcare provider known for excellence in patient care, innovative services, and technological advancement in healthcare delivery.
                            </dd>
                        </div>

                        <div class="relative">
                            <dt>
                                <div class="absolute flex items-center justify-center h-12 w-12 rounded-md bg-blue-500 text-white">
                                    <i class="fas fa-star text-xl"></i>
                                </div>
                                <p class="ml-16 text-lg leading-6 font-medium text-gray-900">Our Values</p>
                            </dt>
                            <dd class="mt-2 ml-16 text-base text-gray-500">
                                <ul class="list-disc pl-4 space-y-2">
                                    <li>Excellence in patient care</li>
                                    <li>Integrity and professionalism</li>
                                    <li>Innovation and continuous improvement</li>
                                    <li>Compassion and empathy</li>
                                </ul>
                            </dd>
                        </div>
                    </dl>
                </div>
            </div>
        </div>
        <div class="bg-blue-700 py-16 px-4 sm:px-6 lg:py-24 lg:px-8 xl:pl-12">
            <div class="max-w-lg mx-auto lg:max-w-none">
                <div class="space-y-8">
                    <div class="bg-white rounded-lg shadow-lg overflow-hidden">
                        <div class="px-6 py-8">
                            <div class="flex items-center">
                                <div class="flex-shrink-0">
                                    <i class="fas fa-hospital text-3xl text-blue-600"></i>
                                </div>
                                <div class="ml-5">
                                    <h3 class="text-lg font-medium text-gray-900">State-of-the-Art Facilities</h3>
                                    <p class="mt-2 text-base text-gray-500">
                                        Modern medical equipment and comfortable treatment rooms designed for your comfort and care.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="bg-white rounded-lg shadow-lg overflow-hidden">
                        <div class="px-6 py-8">
                            <div class="flex items-center">
                                <div class="flex-shrink-0">
                                    <i class="fas fa-user-md text-3xl text-blue-600"></i>
                                </div>
                                <div class="ml-5">
                                    <h3 class="text-lg font-medium text-gray-900">Expert Medical Team</h3>
                                    <p class="mt-2 text-base text-gray-500">
                                        Experienced healthcare professionals dedicated to providing the best medical care.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="bg-white rounded-lg shadow-lg overflow-hidden">
                        <div class="px-6 py-8">
                            <div class="flex items-center">
                                <div class="flex-shrink-0">
                                    <i class="fas fa-clock text-3xl text-blue-600"></i>
                                </div>
                                <div class="ml-5">
                                    <h3 class="text-lg font-medium text-gray-900">Convenient Hours</h3>
                                    <p class="mt-2 text-base text-gray-500">
                                        Extended operating hours to accommodate your busy schedule.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{# Statistics Section #}
<div class="bg-gray-50 pt-12 sm:pt-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-4xl mx-auto text-center">
            <h2 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">
                Trusted by Thousands of Patients
            </h2>
            <p class="mt-3 text-xl text-gray-500 sm:mt-4">
                Our numbers speak for themselves
            </p>
        </div>
    </div>
    <div class="mt-10 pb-12 bg-white sm:pb-16">
        <div class="relative">
            <div class="absolute inset-0 h-1/2 bg-gray-50"></div>
            <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="max-w-4xl mx-auto">
                    <dl class="rounded-lg bg-white shadow-lg sm:grid sm:grid-cols-4">
                        <div class="flex flex-col border-b border-gray-100 p-6 text-center sm:border-0 sm:border-r">
                            <dt class="order-2 mt-2 text-lg leading-6 font-medium text-gray-500">Years of Service</dt>
                            <dd class="order-1 text-5xl font-extrabold text-blue-600">15+</dd>
                        </div>
                        <div class="flex flex-col border-t border-b border-gray-100 p-6 text-center sm:border-0 sm:border-l sm:border-r">
                            <dt class="order-2 mt-2 text-lg leading-6 font-medium text-gray-500">Doctors</dt>
                            <dd class="order-1 text-5xl font-extrabold text-blue-600">50+</dd>
                        </div>
                        <div class="flex flex-col border-t border-gray-100 p-6 text-center sm:border-0 sm:border-l sm:border-r">
                            <dt class="order-2 mt-2 text-lg leading-6 font-medium text-gray-500">Patients Served</dt>
                            <dd class="order-1 text-5xl font-extrabold text-blue-600">100k+</dd>
                        </div>
                        <div class="flex flex-col border-t border-gray-100 p-6 text-center sm:border-0 sm:border-l">
                            <dt class="order-2 mt-2 text-lg leading-6 font-medium text-gray-500">Satisfaction Rate</dt>
                            <dd class="order-1 text-5xl font-extrabold text-blue-600">98%</dd>
                        </div>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>

{# CTA Section #}
<div class="bg-blue-700">
    <div class="max-w-2xl mx-auto text-center py-16 px-4 sm:py-20 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-extrabold text-white sm:text-4xl">
            <span class="block">Experience the difference</span>
            <span class="block">Book your appointment today</span>
        </h2>
        <p class="mt-4 text-lg leading-6 text-blue-200">
            Join thousands of satisfied patients who trust us with their healthcare needs.
        </p>
        <div class="mt-8 flex justify-center space-x-4">
            {% if app.user %}
                <a href="{{ path('app_appointment_new') }}" 
                   class="inline-flex items-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-blue-700 bg-white hover:bg-blue-50">
                    Book Appointment
                </a>
            {% else %}
                <a href="{{ path('app_register') }}" 
                   class="inline-flex items-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-blue-700 bg-white hover:bg-blue-50">
                    Get Started
                </a>
            {% endif %}
            <a href="{{ path('app_contact') }}" 
               class="inline-flex items-center px-5 py-3 border border-white text-base font-medium rounded-md text-white hover:bg-blue-600">
                Contact Us
            </a>
        </div>
    </div>
</div>
{% endblock %}
