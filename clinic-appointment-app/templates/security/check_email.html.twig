{% extends 'base.html.twig' %}

{% block title %}Password Reset Email Sent - {{ parent() }}{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-md">
        <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
            Password Reset Email Sent
        </h2>
        <p class="mt-2 text-center text-sm text-gray-600">
            Check your email for the reset link
        </p>
    </div>

    <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
        <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
            <div class="rounded-md bg-blue-50 p-4">
                <div class="flex">
                    <div class="flex-shrink-0">
                        <i class="fas fa-info-circle text-blue-400"></i>
                    </div>
                    <div class="ml-3">
                        <p class="text-sm text-blue-700">
                            If an account matching your email exists, then an email was just sent that contains a link that you can use to reset your password.
                            This link will expire in {{ resetToken.expirationMessageKey|trans(resetToken.expirationMessageData, 'ResetPasswordBundle') }}.
                        </p>
                    </div>
                </div>
            </div>

            <div class="mt-6">
                <p class="text-sm text-gray-600">
                    If you don't receive an email please check your spam folder or 
                    <a href="{{ path('app_forgot_password_request') }}" class="font-medium text-blue-600 hover:text-blue-500">
                        try again
                    </a>.
                </p>
            </div>

            <div class="mt-6">
                <div class="relative">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t border-gray-300"></div>
                    </div>
                    <div class="relative flex justify-center text-sm">
                        <span class="px-2 bg-white text-gray-500">
                            Or return to
                        </span>
                    </div>
                </div>

                <div class="mt-6">
                    <a href="{{ path('app_login') }}" 
                       class="w-full inline-flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                        <i class="fas fa-sign-in-alt w-5 h-5"></i>
                        <span class="ml-2">Back to Login</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
