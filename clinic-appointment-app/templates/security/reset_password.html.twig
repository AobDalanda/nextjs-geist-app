{% extends 'base.html.twig' %}

{% block title %}Reset Password - {{ parent() }}{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-md">
        <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
            Reset Password
        </h2>
        <p class="mt-2 text-center text-sm text-gray-600">
            Enter your email address and we will send you a link to reset your password.
        </p>
    </div>

    <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
        <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
            {% for flash_error in app.flashes('reset_password_error') %}
                <div class="rounded-md bg-red-50 p-4 mb-4">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <i class="fas fa-exclamation-circle text-red-400"></i>
                        </div>
                        <div class="ml-3">
                            <h3 class="text-sm font-medium text-red-800">
                                {{ flash_error }}
                            </h3>
                        </div>
                    </div>
                </div>
            {% endfor %}

            {{ form_start(requestForm, {
                'attr': {
                    'class': 'space-y-6'
                }
            }) }}

            <div>
                {{ form_label(requestForm.email, 'Email address', {
                    'label_attr': {
                        'class': 'block text-sm font-medium text-gray-700'
                    }
                }) }}
                <div class="mt-1">
                    {{ form_widget(requestForm.email, {
                        'attr': {
                            'class': 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm' ~ (form_errors(requestForm.email) ? ' border-red-300' : '')
                        }
                    }) }}
                    {{ form_errors(requestForm.email, {
                        'attr': {
                            'class': 'mt-1 text-sm text-red-600'
                        }
                    }) }}
                </div>
            </div>

            <div>
                <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                    Send Reset Link
                </button>
            </div>

            {{ form_end(requestForm) }}

            <div class="mt-6">
                <div class="relative">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t border-gray-300"></div>
                    </div>
                    <div class="relative flex justify-center text-sm">
                        <span class="px-2 bg-white text-gray-500">
                            Or return to
                        </span>
                    </div>
                </div>

                <div class="mt-6">
                    <a href="{{ path('app_login') }}" 
                       class="w-full inline-flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                        <i class="fas fa-sign-in-alt w-5 h-5"></i>
                        <span class="ml-2">Back to Login</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
