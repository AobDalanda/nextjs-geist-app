{% extends 'base.html.twig' %}

{% block title %}Register - {{ parent() }}{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-md">
        <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
            Create your account
        </h2>
        <p class="mt-2 text-center text-sm text-gray-600">
            Already have an account?
            <a href="{{ path('app_login') }}" class="font-medium text-blue-600 hover:text-blue-500">
                Sign in
            </a>
        </p>
    </div>

    <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
        <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
            {{ form_start(registrationForm, {
                'attr': {
                    'class': 'space-y-6',
                    'novalidate': 'novalidate'
                }
            }) }}

            <div class="grid grid-cols-2 gap-4">
                <div>
                    {{ form_label(registrationForm.firstName, 'First Name', {
                        'label_attr': {
                            'class': 'block text-sm font-medium text-gray-700'
                        }
                    }) }}
                    <div class="mt-1">
                        {{ form_widget(registrationForm.firstName, {
                            'attr': {
                                'class': 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm' ~ (form_errors(registrationForm.firstName) ? ' border-red-300' : '')
                            }
                        }) }}
                        {{ form_errors(registrationForm.firstName, {
                            'attr': {
                                'class': 'mt-1 text-sm text-red-600'
                            }
                        }) }}
                    </div>
                </div>

                <div>
                    {{ form_label(registrationForm.lastName, 'Last Name', {
                        'label_attr': {
                            'class': 'block text-sm font-medium text-gray-700'
                        }
                    }) }}
                    <div class="mt-1">
                        {{ form_widget(registrationForm.lastName, {
                            'attr': {
                                'class': 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm' ~ (form_errors(registrationForm.lastName) ? ' border-red-300' : '')
                            }
                        }) }}
                        {{ form_errors(registrationForm.lastName, {
                            'attr': {
                                'class': 'mt-1 text-sm text-red-600'
                            }
                        }) }}
                    </div>
                </div>
            </div>

            <div>
                {{ form_label(registrationForm.email, 'Email address', {
                    'label_attr': {
                        'class': 'block text-sm font-medium text-gray-700'
                    }
                }) }}
                <div class="mt-1">
                    {{ form_widget(registrationForm.email, {
                        'attr': {
                            'class': 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm' ~ (form_errors(registrationForm.email) ? ' border-red-300' : '')
                        }
                    }) }}
                    {{ form_errors(registrationForm.email, {
                        'attr': {
                            'class': 'mt-1 text-sm text-red-600'
                        }
                    }) }}
                </div>
            </div>

            <div>
                {{ form_label(registrationForm.phone, 'Phone Number', {
                    'label_attr': {
                        'class': 'block text-sm font-medium text-gray-700'
                    }
                }) }}
                <div class="mt-1">
                    {{ form_widget(registrationForm.phone, {
                        'attr': {
                            'class': 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm' ~ (form_errors(registrationForm.phone) ? ' border-red-300' : '')
                        }
                    }) }}
                    {{ form_errors(registrationForm.phone, {
                        'attr': {
                            'class': 'mt-1 text-sm text-red-600'
                        }
                    }) }}
                </div>
            </div>

            <div>
                {{ form_label(registrationForm.plainPassword, 'Password', {
                    'label_attr': {
                        'class': 'block text-sm font-medium text-gray-700'
                    }
                }) }}
                <div class="mt-1">
                    {{ form_widget(registrationForm.plainPassword.first, {
                        'attr': {
                            'class': 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm' ~ (form_errors(registrationForm.plainPassword.first) ? ' border-red-300' : '')
                        }
                    }) }}
                    {{ form_errors(registrationForm.plainPassword.first, {
                        'attr': {
                            'class': 'mt-1 text-sm text-red-600'
                        }
                    }) }}
                </div>
            </div>

            <div>
                {{ form_label(registrationForm.plainPassword.second, 'Confirm Password', {
                    'label_attr': {
                        'class': 'block text-sm font-medium text-gray-700'
                    }
                }) }}
                <div class="mt-1">
                    {{ form_widget(registrationForm.plainPassword.second, {
                        'attr': {
                            'class': 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm' ~ (form_errors(registrationForm.plainPassword.second) ? ' border-red-300' : '')
                        }
                    }) }}
                    {{ form_errors(registrationForm.plainPassword.second, {
                        'attr': {
                            'class': 'mt-1 text-sm text-red-600'
                        }
                    }) }}
                </div>
            </div>

            <div class="space-y-4">
                <div class="flex items-start">
                    {{ form_widget(registrationForm.agreeTerms, {
                        'attr': {
                            'class': 'h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded'
                        }
                    }) }}
                    <label for="{{ registrationForm.agreeTerms.vars.id }}" class="ml-2 block text-sm text-gray-900">
                        I agree to the 
                        <a href="{{ path('app_terms') }}" class="font-medium text-blue-600 hover:text-blue-500">Terms of Service</a>
                    </label>
                </div>
                {{ form_errors(registrationForm.agreeTerms, {
                    'attr': {
                        'class': 'mt-1 text-sm text-red-600'
                    }
                }) }}

                <div class="flex items-start">
                    {{ form_widget(registrationForm.agreePrivacy, {
                        'attr': {
                            'class': 'h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded'
                        }
                    }) }}
                    <label for="{{ registrationForm.agreePrivacy.vars.id }}" class="ml-2 block text-sm text-gray-900">
                        I agree to the 
                        <a href="{{ path('app_privacy') }}" class="font-medium text-blue-600 hover:text-blue-500">Privacy Policy</a>
                    </label>
                </div>
                {{ form_errors(registrationForm.agreePrivacy, {
                    'attr': {
                        'class': 'mt-1 text-sm text-red-600'
                    }
                }) }}
            </div>

            <div>
                <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                    Register
                </button>
            </div>

            {{ form_end(registrationForm) }}
        </div>
    </div>
</div>
{% endblock %}
